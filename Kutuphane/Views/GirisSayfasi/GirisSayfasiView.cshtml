@model Kutuphane.Models.Entity_Framework.Kullanicilar

@{
    ViewBag.Title = "GirisSayfasiView";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<script src="https://kit.fontawesome.com/aa89b53e61.js" crossorigin="anonymous"></script>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Giris</title>
    <style>
        .gradient-custom {
            background: #6a11cb;
            background: -webkit-linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));
            background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))
        }
    </style>
</head>
<body>

    <style>
        .gradient-custom {
            background-image: linear-gradient(to right top, #e7f9ff, #d2edff, #c7dfff, #c8ceff, #d5baf4, #d5baf4, #d5baf4, #d5baf4, #c8ceff, #c7dfff, #d2edff, #e7f9ff);
        }

        .rounded-t-5 {
            border-top-left-radius: 0.5rem;
            border-top-right-radius: 0.5rem;
        }



        .rounded-bl-lg-5 {
            border-bottom-left-radius: 0.5rem;
        }
    </style>
    <div style="height:100px;width:100%;background-color:lightpink;">
        <i class="fa-solid fa-book-open" style="font-size:60px;padding-top:20px;padding-left:760px;float: left;"></i>
        <div style="font-size:30px;font-weight:600;padding-top:25px;padding-left:20px; float: left;">Kütüphane Otomasyonu</div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <section class="vh-100 gradient-custom">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card bg-dark text-white" style="border-radius: 1rem;">
                            <div class="card-body p-5 text-center">

                                <div class="mb-md-5 mt-md-4 pb-5">

                                    <h2 class="fw-bold mb-2">Giriş Yap</h2>
                                    <p class="text-white-50 mb-5">Lütfen kullanıcı adı ve şifrenini giriniz!</p>

                                    <div class="form-outline form-white mb-4">
                                        @Html.EditorFor(model => model.KullaniciAd, new { htmlAttributes = new { @class = "form-control  form-control-lg" } })
                                        @Html.ValidationMessageFor(model => model.KullaniciAd, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        @Html.EditorFor(model => model.KullaniciSifre, new { htmlAttributes = new { @class = "form-control  form-control-lg" } })
                                        @Html.ValidationMessageFor(model => model.KullaniciSifre, "", new { @class = "text-danger" })
                                    </div>



                                    <button class="btn btn-outline-light btn-lg px-5" type="submit" action>Kullanıcı Girişi</button>



                                </div>

                                <div>
                                    <p class="mb-0">
                                        Hesabınız Yok Mu?
                                        Kayıt olmak için kütüphane görevlisiyle iletişimi geçiniz
                                    </p>
                                </div>
                                <a href="/Login/AdminLogin"> Yönetici Girişi İçin Tıklayınız</a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
</body>
</html>
