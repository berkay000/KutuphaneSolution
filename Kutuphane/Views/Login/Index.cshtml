
@model Kutuphane.Models.Entity_Framework.Kullanicilar
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <system.web>

        <authentication mode="Forms" />

    </system.web>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Giris</title>
    <style>
        .gradient-custom {
            background: #6a11cb;
            background: -webkit-linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));
            background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))
        }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <section class="vh-100 gradient-custom">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card bg-dark text-white" style="border-radius: 1rem;">
                            <div class="card-body p-5 text-center">

                                <div class="mb-md-5 mt-md-4 pb-5">

                                    <h2 class="fw-bold mb-2">Giriş Yap</h2>
                                    <p class="text-white-50 mb-5">Lütfen kullanıcı adı ve şifrenini giriniz!</p>

                                    <div class="form-outline form-white mb-4">
                                        <label class="form-label" for="typeEmailX">Kullanıcı Adı</label>
                                        @Html.EditorFor(model => model.KullaniciAd, new { htmlAttributes = new { @class = "form-control  form-control-lg" } })
                                        @Html.ValidationMessageFor(model => model.KullaniciAd, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        <label class="form-label" for="typePasswordX">Şifre</label>
                                        @Html.EditorFor(model => model.KullaniciSifre, new { htmlAttributes = new { @class = "form-control  form-control-lg" } })
                                        @Html.ValidationMessageFor(model => model.KullaniciSifre, "", new { @class = "text-danger" })

                                    </div>


                                    <button class="btn btn-outline-light btn-lg px-5" type="submit">Giriş</button>
                                    @if (ViewBag.Notification != null)
                                    {
                                        <div class="    text-danger">
                                            @ViewBag.Notification
                                        </div>
                                    }



                                    </div>

                                <div>
                                    <p class="mb-0">
                                        Henüz kayıt olmadıysan <a href="./Login/Kayıt" class="text-white-50 fw-bold"> Kaydol</a>
                                    </p>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
    </body>
</html>
